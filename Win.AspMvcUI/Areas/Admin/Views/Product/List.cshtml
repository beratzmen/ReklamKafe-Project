
@model  Win.MvcUI.Areas.Admin.Models.ProductListViewModel

@{
    ViewBag.Title = "Ürün Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()

<!-- page content -->
<div class="">
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <a href="/Admin/Product/Insert" class="btn btn-success btn-xs"><i class="fa fa-pencil-square-o"></i> Yeni Ürün Ekle</a>

            <div class="x_panel">
                <div class="x_title">
                    <h2>Ürün Listesi</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Ürün Adı</th>
                                <th>Açıklama</th>
                                <th>Puan</th>
                                <th>Miktar</th>
                                <th>Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Product)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@Html.Raw(item.Description)</td>
                                    <td>@item.Price</td>
                                    <td>@item.Amount</td>
                                    <td>
                                        <a href="#" class="btn btn-primary btn-xs"><i class="fa fa-eye"></i> Görüntüle </a>
                                        <a href="/Admin/Product/Update/@item.Id" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Düzenle </a>
                                        <a href="/Admin/Product/Delete/@item.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Sil </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- /page content -->