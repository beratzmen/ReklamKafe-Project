
@{
    ViewBag.Title = "Şifremi Unuttum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content text-center">
                <h2>Şifre Yenileme Ekranı</h2>
                <div class="page_link">
                    <a href="/anasayfa">Ana Sayfa</a>
                    <a href="/sifremiunuttum">Şifremi Yenile</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
<!--================Login Box Area =================-->
<section class="login_box_area p_120">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login_box_img">
                    <img class="img-fluid" src="~/Content/img/login.jpg" alt="">
                    <div class="hover">
                        <h4>Şifreni mi Unuttun ?</h4>
                        <p>Tek yapman gereken sistemde kayıtlı olan mail adresini girmek ve yeni şifreni alarak puan toplamaya başlamak.Veya hemen yeni bir hesap oluşturabilirsin.</p>
                        <a class="main_btn" href="/kayit">Hesap Oluştur</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login_form_inner">
                    <h3>ŞİFRE YENİLEME EKRANI</h3>
                    <form class="row login_form" action="/sifremiunuttum/email" method="post">
                        @Html.AntiForgeryToken()
                        <div class="col-md-12 form-group">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Sistemde Kayıtlı Olan Mail Adresini Gir">
                        </div>

                        <div class="col-md-12 form-group">
                            <button type="submit" value="submit" class="btn submit_btn">Gönder</button>
                            <a href="/giris">Giriş Yap</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Login Box Area =================-->





