
@{
    ViewBag.Title = "Kullanıcı Giriş Ekranı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content text-center">
                <h2>Kullanıcı Bilgileri</h2>
                <div class="page_link">
                    <a href="/anasayfa">Ana Sayfa</a>
                    <a href="/giris">Giriş</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
<!--================Login Box Area =================-->
<section class="login_box_area p_120">
    <div class="container">
        @if (ViewBag.AlertMessage == true)
        {
            <div class="alert alert-danger" role="alert" style="text-align:center;font-weight:bold;">LÜTFEN TEKRAR DENEYİN</div>
        }
        @if (ViewBag.AlertMessageFirstLogin == true)
        {
            <div class="alert alert-warning" role="alert" style="text-align:center;font-weight:bold">KAYIT İŞLEMİ TAMAMLANDI GİRİŞ YAPABİLİRSİNİZ</div>
        }
        <div class="row">
            <div class="col-lg-6">
                <div class="login_box_img">
                    <img class="img-fluid" src="~/Content/img/login.jpg" alt="">
                    <div class="hover">
                        <h4>Henüz Kayıt Olmadınız mı?</h4>
                        <p>Ücretsiz ürün alabilmeniz için kayıt olmalısınız.</p>
                        <a class="main_btn" href="/kayit">Hesap Oluştur</a>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="login_form_inner">
                    <h3>GİRİŞ YAP</h3>
                    @*@using (Html.BeginForm("giris", "kullanici", FormMethod.Post))
                        {*@
                    <form class="row login_form" action="/giris" method="post">
                        @Html.AntiForgeryToken()
                        <div class="col-md-12 form-group">
                            <input type="text" class="form-control" id="NickName" name="NickName" placeholder="Kullanıcı Adınız">
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Şifreniz">
                        </div>
                        @*<div class="col-md-12 form-group">
                                <div class="creat_account">
                                    <input type="checkbox" id="f-option2" name="selector">
                                    <label for="f-option2">Keep me logged in</label>
                                </div>
                            </div>*@
                        <div class="col-md-12 form-group">
                            <button type="submit" value="submit" class="btn submit_btn">GİRİŞ YAP</button>
                            <a href="/sifremiunuttum">Şifreni mi Unuttun?</a>
                        </div>
                    </form>
                    @*}*@

                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Login Box Area =================-->




