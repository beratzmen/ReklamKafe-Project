@model Win.Entities.Model.UserInfo

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()

<br />
<div class="container">
    <div class="jumbotron" style="background-color:#f5f5f5">
        <div class="row">
            <div class="col-md-3 col-xs-12 col-sm-6 col-lg-3">
                <div>
                    <div>
                        <img style="height:175px;" src="@Model.PhotoUrl">
                        <h3 class="label label-default">@Model.Title</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-9 col-xs-12 col-sm-6 col-lg-9">
                <div style="border-bottom:1px solid black">
                    <h2 class="label label-primary">@Model.NickName</h2>
                </div>
                <hr>
                <div class="col-md-8">
                    <ul class="details">
                        <li>
                            <span class="label label-success" style="font-size:75%">@Model.Point PUAN</span>
                        </li>
                        <li>
                            <span class="label label-info" style="font-size:75%">@Model.CreatedDate</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>