
@model  Win.Entities.Model.Product

    @{
        ViewBag.Title = "Ürün Güncelleme";
        Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    }





    <form method="post" action="/Admin/Product/Update" enctype="multipart/form-data" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                Ürün Id : <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input type="hidden" id="first-name" value="@Model.Id" name="Id" required="required" class="form-control col-md-7 col-xs-12">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                Ürün İsmi : <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input type="text" id="first-name" value="@Model.Name" name="Name" required="required" class="form-control col-md-7 col-xs-12">
            </div>
        </div>

        <div class="form-group">
            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">
                Ürün Puanı : <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input id="middle-name" value="@Model.Price" class="form-control col-md-7 col-xs-12" type="text" name="Price" required="required">
            </div>
        </div>

        <div class="form-group">
            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">
                Ürün Miktarı : <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input id="middle-name" value="@Model.Amount" class="form-control col-md-7 col-xs-12" type="text" name="Amount" required="required">
            </div>
        </div>

        <div class="form-group">
            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">
                Ürün Resmi 1 : <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input id="middle-name" value="@Model.Upload1" class="form-control col-md-7 col-xs-12" type="file" name="upload1" required="required">
            </div>
        </div>


        <div class="form-group">
            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">
                Ürün Resmi 2 : <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input id="middle-name" class="form-control col-md-7 col-xs-12" type="file" name="upload2" required="required">
            </div>
        </div>


        <div class="form-group">
            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">
                Ürün Resmi 3 : <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input id="middle-name" class="form-control col-md-7 col-xs-12" type="file" name="upload3" required="required">
            </div>
        </div>

        <label for="middle-name">
            Ürün Detayı : <textarea class="ckeditor" name="Description">@Model.Description</textarea>
        </label>


        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <button class="btn btn-primary" type="button">Cancel</button>
                <button class="btn btn-primary" type="reset">Reset</button>

                <input type="submit" class="btn btn-success" value="Kaydet" />
            </div>
        </div>

    </form>

